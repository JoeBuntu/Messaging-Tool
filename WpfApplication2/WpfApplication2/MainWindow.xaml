<Window x:Class="WpfApplication2.MainWindow"
        x:Name="ThisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <ListBox x:Name="lbxMessages" Grid.Column="0" ItemsSource="{Binding ElementName=ThisWindow, Path=Messages}" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock  Text="{Binding Path=Received}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Gray"/>
            <TextBox Grid.Column="2" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                     Text="{Binding ElementName=lbxMessages, Path=SelectedItem.MessageText}" />
        </Grid>
    </Grid>
</Window>
